<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">
        <Button
            android:id="@+id/new_button"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="NEW"
            android:background="@drawable/button_next_shape"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/txt_white">
        </Button>
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/off_button"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="30% off"
            android:textColor="@color/txt_white"
            android:background="@drawable/btn_shape"
            app:layout_constraintLeft_toRightOf="@id/new_button"
            app:layout_constraintTop_toTopOf="parent">
        </Button>
        <ImageView
            android:id="@+id/product_images"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/iphone11pro"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone 8 plus"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/product_title"
            app:layout_constraintTop_toBottomOf="@id/new_button"
            app:layout_constraintLeft_toLeftOf="parent">
        </TextView>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple"
            android:id="@+id/product_title_style"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@id/product_title"
            app:layout_constraintLeft_toLeftOf="parent">
        </TextView>
        <RatingBar
            android:layout_marginTop="10dp"
            android:rating="2.5"
            android:id="@+id/rate_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize=".5"
            style="?android:attr/ratingBarStyleSmall"
            app:layout_constraintTop_toBottomOf="@id/product_title_style"
            app:layout_constraintLeft_toLeftOf="parent">
        </RatingBar>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/view_only"
            app:layout_constraintTop_toBottomOf="@id/rate_product"
            app:layout_constraintRight_toLeftOf="@id/product_images"
            android:background="#3C3838">
        </View>

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="99999 KS"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/bgColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_only"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>